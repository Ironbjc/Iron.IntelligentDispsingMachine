                        CommandParameter="{Binding ElementName=win}"/>
            </Grid>
        </Border>-->
        <control:Progressing Grid.ColumnSpan="2" Grid.RowSpan="3" Visibility="{Binding ProgressVisibility}" Message="{Binding ProgressMessage}" />
    </Grid>
</UserControl>
